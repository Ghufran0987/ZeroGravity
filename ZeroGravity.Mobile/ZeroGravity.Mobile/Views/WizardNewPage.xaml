                    <!--Question-->
                    <Label Grid.Row="1"
                               Text="{Binding Name}"
                               Margin="15,20,15,5"
                               FontSize="18"
                               TextColor="#319C8A"
                               HorizontalOptions="FillAndExpand"
                               VerticalTextAlignment="End"
                               HorizontalTextAlignment="Center" />

                    <!--Answer-->
                    <syncfusionListView:SfListView
                            Grid.Row="2" Margin="40,5"
                            SelectedItems="{Binding SelectedAnswers, Mode=TwoWay}"
                            SelectionMode="Multiple"
                            SelectionGesture="Tap"
                            AutoFitMode="DynamicHeight"
                            IsScrollingEnabled="False"
                            ItemsSource="{Binding Answers}">
                        <syncfusionListView:SfListView.ItemTemplate>
                            <DataTemplate>
                                <border:SfBorder BorderThickness="0" BorderWidth="0" CornerRadius="26" Margin="10" BackgroundColor="#BDBDBD">

                                    <Label Text="{Binding DisplayText}" FontAttributes="Bold" TextColor="#FFF" FontSize="16" Margin="10" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                                </border:SfBorder>
                            </DataTemplate>
                        </syncfusionListView:SfListView.ItemTemplate>
                        <syncfusionListView:SfListView.SelectedItemTemplate>
                            <DataTemplate>
                                <border:SfBorder BorderThickness="0" BorderWidth="0" CornerRadius="26" Margin="10" BackgroundColor="#FF5869">

                                    <Label Text="{Binding DisplayText}" FontAttributes="Bold" TextColor="#FFF" FontSize="16" Margin="10" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                                </border:SfBorder>
                            </DataTemplate>
                        </syncfusionListView:SfListView.SelectedItemTemplate>
                    </syncfusionListView:SfListView>
                </Grid>
            </DataTemplate>
            <!--Text Entry-->
            <DataTemplate x:Key="Template11">
                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="120"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Category-->
                    <Label Grid.Row="0"
                               Text="{Binding Category}"
                               Margin="5,15"
                               FontSize="18"
                               TextColor="#FF5869"
                               HorizontalOptions="FillAndExpand"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center" />

                    <!--Question-->
                    <Label Grid.Row="2"
                               Text="{Binding Name}"
                               Margin="5"
                               FontSize="18"
                               TextColor="#319C8A"
                               HorizontalOptions="FillAndExpand"
                               VerticalTextAlignment="End"
                               HorizontalTextAlignment="Center" />

                    <!--Answer-->
                    <border:SfBorder Grid.Row="3" BorderThickness="0" BorderWidth="0" CornerRadius="6" HasShadow="True" Margin="20,0,20,5" BackgroundColor="#FFF">
                        <Entry x:Name="entry11"
                               Text="{Binding SelectedAnswer.Value, Mode=TwoWay}"
                               Margin="0"
                               FontSize="20"
                               Placeholder="type here"
                               TextColor="#FF5869"
                               BackgroundColor="Transparent"
                               IsTabStop="True"
                               TabIndex="0"
                               HorizontalTextAlignment="center"
                               VerticalTextAlignment="center"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand" />
                    </border:SfBorder>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView BackgroundColor="#FFF">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <border:SfBorder Grid.Row="0" BorderColor="Red" BorderWidth="0" BackgroundColor="#FFF" BorderThickness="0,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <buttons:SfButton BackgroundColor="White" Grid.Column="1"
                                          Command="{Binding PreviousCommand}"
                                          HeightRequest="40" WidthRequest="40">
                            <buttons:SfButton.Content>
                                <Label FontFamily="{x:Static fonts:CustomFontName.FaLight300}"
                                       Text="&#xf060;" HorizontalOptions="Center" VerticalOptions="Center"
                                       TextColor="#FF5869" Margin="2"
                                       FontSize="18" FontAttributes="Bold" />
                            </buttons:SfButton.Content>
                        </buttons:SfButton>
                    </Grid>
                </border:SfBorder>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--Step 1-->
                    <border:SfBorder Grid.Column="1" BorderThickness="0" BorderWidth="2" CornerRadius="6"
                                     BorderColor="{Binding Step1Progress.FillColor}"
                                     BackgroundColor="#FFF"
                                     HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                     HeightRequest="30" WidthRequest="30">
                        <Label Text="" FontSize="12" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="#FFF" />
                    </border:SfBorder>
                    <progressBar:SfLinearProgressBar  Grid.Column="2" Grid.ColumnSpan="1"
                                                      Progress="{Binding Step1Progress.ProgressValue}"
                                                      ProgressColor="{Binding Step1Progress.FillColor}"
                                                      VerticalOptions="Center" HorizontalOptions="Fill"
                                                      HeightRequest="2" Margin="-6" />

                    <border:SfBorder Grid.Column="3" BorderThickness="0" BorderWidth="2" CornerRadius="6"
                                     BorderColor="{Binding Step1Progress.FillColor}"
                                     BackgroundColor="{Binding Step1Progress.FillColor}"
                                     HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                     HeightRequest="30" WidthRequest="30">
                        <Label Text="1" FontSize="12"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center"   TextColor="#FFF" />
                    </border:SfBorder>

                    <!--Step 2-->
                    <progressBar:SfLinearProgressBar Grid.Column="4"
                                                     Progress="{Binding Step2Progress.ProgressValue}"
                                                     ProgressColor="{Binding Step2Progress.FillColor}"
                                                     BackgroundColor="{Binding Step2Progress.FillColor}"
                                                     VerticalOptions="Center" HorizontalOptions="Fill"
                                                     HeightRequest="2" Margin="-6" />
                    <border:SfBorder Grid.Column="5" BorderThickness="0" BorderWidth="2" CornerRadius="6"
                                     BorderColor="{Binding Step2Progress.FillColor}"
                                     BackgroundColor="{Binding Step2Progress.FillColor}"
                                     HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                     HeightRequest="30" WidthRequest="30">
                        <Label Text="2" FontSize="12"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center"  TextColor="#FFF" />
                    </border:SfBorder>

                    <!--Step 3-->
                    <progressBar:SfLinearProgressBar Grid.Column="6"
                                                     Progress="{Binding Step3Progress.ProgressValue}"
                                                     ProgressColor="{Binding Step3Progress.FillColor}"
                                                     BackgroundColor="{Binding Step3Progress.FillColor}"
                                                     VerticalOptions="Center" HorizontalOptions="Fill"
                                                     HeightRequest="2" Margin="-6" />

                    <border:SfBorder Grid.Column="7" BorderThickness="0" BorderWidth="2" CornerRadius="6"
                                     BorderColor="{Binding Step3Progress.FillColor}"
                                     BackgroundColor="{Binding Step3Progress.FillColor}"
                                     HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                     HeightRequest="30" WidthRequest="30">
                        <Label Text="3" FontSize="12"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center"  TextColor="#FFF" />
                    </border:SfBorder>

                    <!--Step 4-->
                    <progressBar:SfLinearProgressBar Grid.Column="8"
                                                     Progress="{Binding Step4Progress.ProgressValue}"
                                                     ProgressColor="{Binding Step4Progress.FillColor}"
                                                     BackgroundColor="{Binding Step4Progress.FillColor}"
                                                     VerticalOptions="Center" HorizontalOptions="Fill"
                                                     HeightRequest="2" Margin="-6" />

                    <border:SfBorder Grid.Column="9" BorderThickness="0" BorderWidth="2" CornerRadius="6"
                                     BorderColor="{Binding Step4Progress.FillColor}"
                                     BackgroundColor="{Binding Step4Progress.FillColor}"
                                     HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                     HeightRequest="30" WidthRequest="30">
                        <Label Text="4" FontSize="12"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center"  TextColor="#FFF" />
                    </border:SfBorder>

                    <!--Step 5-->
                    <progressBar:SfLinearProgressBar Grid.Column="10"
                                                     Progress="{Binding Step5Progress.ProgressValue}"
                                                     ProgressColor="{Binding Step5Progress.FillColor}"
                                                     BackgroundColor="{Binding Step5Progress.FillColor}"
                                                     VerticalOptions="Center" HorizontalOptions="Fill"
                                                     HeightRequest="2" Margin="-6" />

                    <border:SfBorder Grid.Column="11" BorderThickness="0" BorderWidth="2" CornerRadius="6"
                                     BorderColor="{Binding Step5Progress.FillColor}"
                                     BackgroundColor="{Binding Step5Progress.FillColor}"
                                     HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                     HeightRequest="30" WidthRequest="30">
                        <Label Text="5" FontSize="12"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center"  TextColor="#FFF" />
                    </border:SfBorder>


                    <!--Step 6-->
                    <progressBar:SfLinearProgressBar Grid.Column="12"
                                                     Progress="{Binding Step6Progress.ProgressValue}"
                                                     ProgressColor="{Binding Step6Progress.FillColor}"
                                                     BackgroundColor="{Binding Step6Progress.FillColor}"
                                                     VerticalOptions="Center" HorizontalOptions="Fill"
                                                     HeightRequest="2" Margin="-6" />

                    <border:SfBorder Grid.Column="13" BorderThickness="0" BorderWidth="2" CornerRadius="6"
                                     BorderColor="{Binding Step6Progress.FillColor}"
                                     BackgroundColor="{Binding Step6Progress.FillColor}"
                                     HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                     HeightRequest="30" WidthRequest="30">
                        <Label Text="6" FontSize="12"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center"  TextColor="#FFF" />
                    </border:SfBorder>


                </Grid>

                <Grid Grid.Row="2">

                    <syncfusion:SfRotator x:Name="rotator"
                                                    EnableAutoPlay="False"
                                                    NavigationDelay="2000"
                                                    ItemsSource="{Binding Questions, Mode=TwoWay}"
                                                    SelectedIndex="{Binding SelectedQuestionIndex, Mode=TwoWay}"
                                                    NavigationDirection="Horizontal"
                                                    NavigationStripMode="Dots"
                                                    DotPlacement="None"
                                                    EnableSwiping="False"
                                                    BackgroundColor="#FFF">
                        <syncfusion:SfRotator.ItemTemplate>
                            <templateSelector:OnBoardingTemplateSelector
                                                        DefaultTemplate="{StaticResource DefaultTemplate}"
                                                        Template2="{StaticResource Template2}"
                                                        Template3="{StaticResource Template3}"
                                                        Template4="{StaticResource Template4}"
                                                        Template5="{StaticResource Template5}"
                                                        Template6="{StaticResource Template6}"
                                                        Template7="{StaticResource Template7}"
                                                        Template8="{StaticResource Template8}"
                                                        Template9="{StaticResource Template9}"
                                                        Template10="{StaticResource Template10}"
                                                        Template11="{StaticResource Template11}" />
                        </syncfusion:SfRotator.ItemTemplate>
                    </syncfusion:SfRotator>

                </Grid>

                <StackLayout BackgroundColor="Transparent" Grid.Row="3">
                    <buttons:SfButton Text="{x:Static resources:AppResources.Button_Continue}"
                                  CornerRadius="30"
                                  HorizontalOptions="Center"
                                  Margin="10"
                                  TextColor="#FFF"
                                  BackgroundColor="#319C8A"
                                  WidthRequest="140"
                                  HeightRequest="40"
                                  Command="{Binding NextCommand}" />
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</base:ContentPageBase>